// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Patient{
    id Int @id @default(autoincrement())
    name String
    birth_date String
    phone String
    cpf String
    profession String
    email String
    address String
    how_know_us String
    medical_record MedicalRecord?
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  user_type String
  clinic_code String?
  user_code String? 
}

model Sympthom{
  id Int @id @default(autoincrement())
  description String
}

model MedicalRecord{
  id Int @id @default(autoincrement())
  patiend_id Int @unique
  patient Patient @relation(fields: [patiend_id],references: [id])
}
